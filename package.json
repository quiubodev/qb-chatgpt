{
  "name": "quiubo-chatgpt",
  "version": "1.0.0",
  "author": {
    "name": "Victor Hugo Cornejo Calderon",
    "email": "me@victorcornejo.com"
  },
  "license": "MIT",
  "description": "Aplicacion basada en electron para usar ChatGpt en el escritorio",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:quiubodev/qb-chatgpt.git"
  },
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "release": "build"
  },
  "build": {
    "appId": "com.electron.quiubo.chatgpt",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.social-networking",
      "target": "dmg",
      "icon": "icons/qb-chat-gpt-round.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "icons/qb-chat-gpt-round.icon"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icons/qb-chat-gpt-round.png"
    }
  },
  "keywords": [],
  "devDependencies": {
    "electron": "25.3.0",
    "electron-builder": "24.4.0"
  },
  "dependencies": {
    "electron-updater": "6.1.1"
  }
}
